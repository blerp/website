{
    "name": "@blerpapp/web",
    "version": "0.0.0-development",
    "private": true,
    "main": "dist/app.js",
    "scripts": {
        "clean": "gulp clean",
        "build": "gulp build",
        "simple": "node ./dist/server.js",
        "start": "npm run build && node ./dist/server.js",
        "prod": "npm run build && pm2 start ./dist/server.js --name website",
        "elint": "eslint --fix 'src/**/**/**/**/*.js'",
        "slint": "stylelint 'src/**/**/**/*.js'",
        "plint": "prettier all --write src/**/**/*.js",
        "delete:prod": "pm2 delete website",
        "dev": "cross-env NODE_ENV=development babel-node src/server.js",
        "next:dev": "next ./src",
        "next:build": "next build ./src",
        "next:start": "next start ./src",
        "next:dist": "next build dist",
        "next:export": "next export dis",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "semantic-release": "semantic-release",
        "jest:watch": "jest --watch",
        "test": "jest --selectProjects specs",
        "lint": "jest --selectProjects lint:eslint lint:prettier lint:stylelint",
        "lint:eslint": "jest --selectProjects lint:eslint",
        "lint:prettier": "jest --selectProjects lint:prettier",
        "lint:stylelint": "jest --selectProjects lint:stylelint",
        "test:all": "jest",
        "predeploy": "npm install && npm run clean && npm run build && npm run next:dist && rm -rf ./node_modules && npm install --production",
        "deploy:prod": "npm run predeploy && NODE_ENV='production' serverless deploy && npm install",
        "deploy:staging": "npm run predeploy && NODE_ENV='staging' serverless deploy && npm install",
        "deploy:prod:firebase": "firebase deploy --project blerp-cf7ae --token $FIREBASE_TOKEN",
        "deploy:staging:firebase": "firebase deploy --project blerp-staging-ac0d7 --token $FIREBASE_TOKEN"
    },
    "engines": {
        "node": ">=12"
    },
    "lint-staged": {
        "*": [
            "jest --bail --findRelatedTests"
        ]
    },
    "dependencies": {
        "@apollo/client": "^3.1.3",
        "@apollo/react-components": "^4.0.0",
        "@apollo/react-hoc": "^4.0.0",
        "@apollo/react-hooks": "^4.0.0",
        "@apollo/react-ssr": "^4.0.0",
